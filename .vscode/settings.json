{
  "cSpell.words": [
    "mailgun"
  ],

  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },

  "[js]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[ts]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[typescript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },

  "eslint.validate": [
    "typescript",
    "json"
  ],

  "files.exclude": {
    "**/node_modules": true
  }
}
