{
  "name": "@fixers/mail",
  "type": "module",
  "version": "1.1.1",
  "description": "Extraterrestrial efficiency in email transmission!",
  "author": "Luca <git@lucacicada.me>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/wefixers/mail.git"
  },
  "keywords": [
    "mail",
    "email",
    "nodemailer"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js"
    },
    "./mailers/mailgun": {
      "types": "./lib/mailers/mailgun.d.ts",
      "import": "./lib/mailers/mailgun.js"
    },
    "./mailers/ses": {
      "types": "./lib/mailers/ses.d.ts",
      "import": "./lib/mailers/ses.js"
    },
    "./package.json": "./package.json"
  },
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "clean": "rimraf ./lib",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "prebuild": "npm run clean",
    "build": "npm run clean && tsc",
    "test": "vitest run",
    "release": "npm run lint && npm run test && npm run build && changelogen --release",
    "prepublishOnly": "npm run build && npm run test"
  },
  "peerDependencies": {
    "@aws-sdk/client-ses": "^3.340.0",
    "nodemailer-mailgun-transport": "^2.0.0"
  },
  "peerDependenciesMeta": {
    "@aws-sdk/client-ses": {
      "optional": true
    },
    "nodemailer-mailgun-transport": {
      "optional": true
    }
  },
  "dependencies": {
    "nodemailer": "^6.5.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.39.4",
    "@aws-sdk/client-ses": "^3.345.0",
    "@types/nodemailer": "^6.4.8",
    "@types/nodemailer-mailgun-transport": "^1.4.3",
    "changelogen": "^0.5.3",
    "eslint": "^8.42.0",
    "nodemailer-mailgun-transport": "^2.1.5",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3",
    "vitest": "^0.31.4"
  }
}